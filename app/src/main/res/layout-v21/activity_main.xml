<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.root.a201grid.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:background="#757bac"
            android:text="Hello"
            android:textColor="#FFFFFF"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:id="@+id/hello"
            android:onClick="buttonTaped"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:background="#75aca3"
            android:text="How are you ?"
            android:textColor="#FFFFFF"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:id="@+id/howareyou"
            android:onClick="buttonTaped"/>
        <!---->
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:background="#7594ac"
            android:text="Good Evening"
            android:textColor="#FFFFFF"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:id="@+id/goodevening"
            android:onClick="buttonTaped"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:background="#8275ac"
            android:text="my name is"
            android:textColor="#FFFFFF"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:id="@+id/mynameis"
            android:onClick="buttonTaped"/>
        <!---->
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:background="#9875ac"
            android:text="i live in"
            android:textColor="#FFFFFF"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:id="@+id/ilivein"
            android:onClick="buttonTaped"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:background="#758dac"
            android:text="do you &#10; speak english ?"
            android:textColor="#FFFFFF"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:id="@+id/doyouspeakenglish"
            android:onClick="buttonTaped"/>
        <!---->
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:background="#637f9b"
            android:text="please"
            android:textColor="#FFFFFF"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:id="@+id/please"
            android:onClick="buttonTaped"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:background="#9a75ac"
            android:text="welcome"
            android:textColor="#FFFFFF"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:id="@+id/welcome"
            android:onClick="buttonTaped"/>
    </GridLayout>

</RelativeLayout>
